extends layout

block title
  = title

block content
  div#wrap
    div.container
      div.content
        div.page-header
          h1= title
            small  Keep smiling 
              span.glyphicon.glyphicon-thumbs-up
        div.row
          div.col-md-12.col-sm-12
            div#countdown.btn.btn-lg.btn-danger.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2
              |  Countdown
            div#message.btn.btn-lg.btn-success.col-md-8.col-md-offset-2.col-sm-8.col-sm-offset-2
              |  Cheese
            img#photo(width="100%")

  div#footer
    div.container
      div.row.top-buffer
        div.col-md-4.col-md-offset-1.col-sm-4.col-sm-offset-1.btn.btn-lg.btn-primary.active
          span.glyphicon.glyphicon-camera
          |  Neues Foto
        div.col-md-4.col-md-offset-2.col-sm-4.col-sm-offset-2.btn.btn-lg.btn-info.disabled
          span.glyphicon.glyphicon-picture
          |  Galerie
